<div class="pull-left">
  <% if @thing.paginator.total_pages > 1 %>
    <nav>
      <ul class="pagination">
        <% unless @thing.paginator.pages.first == 1 && @thing.paginator.current_page == @thing.paginator.pages.first %>
          <li><%= link_to translate_scoped("pagination.first"), params.merge(page: 1) %></li>
          <li><%= link_to "«", params.merge(page: @thing.paginator.current_page - 1) %></li>
        <% end %>
        <% unless @thing.paginator.pages.first == 1 %>
          <li class="disabled"><%= link_to "…" %></li>
        <% end %>
        <% @thing.paginator.pages.each do |page| %>
          <li class="<%= "active" if page == @thing.paginator.current_page %>">
            <%= link_to page, params.merge(page: page) %>
          </li>
        <% end %>
        <% unless @thing.paginator.pages.last == @thing.paginator.total_pages %>
          <li class="disabled"><%= link_to "…" %></li>
        <% end %>
        <% unless @thing.paginator.pages.last == @thing.paginator.total_pages && @thing.paginator.current_page == @thing.paginator.pages.last %>
          <li><%= link_to "»", params.merge(page: @thing.paginator.current_page + 1) %></li>
          <li><%= link_to translate_scoped("pagination.last"), params.merge(page: @thing.paginator.total_pages) %></li>
        <% end %>
      </ul>
    </nav>
  <% end %>
</div>
<div class="pagination-entries pull-right hidden-xs">
  <% if @resources.length == 0 %>
    <%= translate_scoped("pagination.entries.zero", {
      resource: @resource_class.model_name.human(count: @resources.length).downcase
    }) %>
  <% else %>
    <%= translate_scoped("pagination.entries.other", {
      resource: @resource_class.model_name.human(count: @resources.length).downcase,
      count: @resources.length,
      total: @thing.paginator.total_resources
    }) %>
  <% end %>
</div>
