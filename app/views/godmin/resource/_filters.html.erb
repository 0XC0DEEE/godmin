<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Filter</h3>
  </div>
  <div class="panel-body">
    <%= form_tag '#', method: :get, class: "form-horizontal" do %>
      <% filter_map.each do |name, options| %>
        <div class="form-group">
          <%= label_tag name, nil, class: "col-lg-4 control-label" %>
          <div class="col-lg-8">
            <%= filter_input_tag name, options %>
          </div>
        </div>
      <% end %>
      <div class="form-actions">
        <div class="col-lg-8 col-lg-offset-4">
          <%= submit_tag "Filtrera", class: "btn btn-primary" %>
          <%= link_to "Rensa", url_for([:admin, resource_class]), class: "btn btn-danger" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
