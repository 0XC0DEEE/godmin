<%= render partial: 'header', locals: { resource_class: resource_class } %>
<div class="row">
  <div class="col-md-8">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <% attrs_for_index.each do |attr| %>
            <th>
              <%= column_header resource_class, attr %>
            </th>
          <% end %>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |resource| %>
          <tr>
            <% attrs_for_index.each do |attr| %>
              <td>
                <%= column resource_class, resource, attr %>
              </td>
            <% end %>
            <td>
              <%= link_to 'Show', [:admin, resource], class: 'btn btn-default btn-xs' %>
              <%= link_to 'Edit', [:edit, :admin, resource], class: 'btn btn-default btn-xs' %>
              <%= link_to 'Destroy', [:admin, resource], method: :delete, data: { confirm: "Är du säker?" }, class: 'btn btn-danger btn-xs' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <%= render partial: 'filters' %>
  </div>
</div>
