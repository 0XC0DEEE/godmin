<% if @resource_service.attrs_for_export.present? %>
  <div class="btn-group">
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
      <%= translate_scoped("actions.export") %> <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" role="menu">
      <li>
        <%= link_to "As JSON", url_for(params.merge(only_path: true, format: "json")) %>
      </li>
      <li>
        <%= link_to "As CSV", url_for(params.merge(only_path: true, format: "csv")) %>
      </li>
    </ul>
  </div>
<% end %>
