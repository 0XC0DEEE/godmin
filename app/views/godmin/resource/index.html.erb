<%= render partial: 'header', locals: { resource_class: resource_class } %>
<div class="row">
  <div class="col-md-8">
    <table class="table table-bordered table-striped">
      <thead>
        <tr>
          <% attrs_for_index.each do |attr| %>
            <th>
              <%= attr_header attr %>
            </th>
          <% end %>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% collection.each do |resource| %>
          <tr>
            <% attrs_for_index.each do |attr| %>
              <td>
                <%= resource.send(attr.to_s) %>
              </td>
            <% end %>
            <td>
              <%= link_to 'Show', [:admin, resource], class: 'btn btn-default btn-xs' %>
              <%= link_to 'Edit', [:edit, :admin, resource], class: 'btn btn-default btn-xs' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Filter</h3>
      </div>
      <div class="panel-body">
        <%= render partial: 'filter_form' %>
      </div>
    </div>
  </div>
</div>
