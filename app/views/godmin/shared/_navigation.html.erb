<ul class="nav navbar-nav">
  <% Godmin.resources.each do |resource| %>
    <% if controller.controller_name == resource.to_s %>
      <li class="active">
    <% else %>
      <li>
    <% end %>
      <%= link_to resource.to_s.classify.constantize.model_name.human(count: 2), resource %>
    </li>
  <% end %>
</ul>
<ul class="nav navbar-nav navbar-right">
  <% if Godmin.admin_user_class && admin_user_signed_in? %>
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= admin_user.email %> <span class="caret"></span>
      </a>
      <ul class="dropdown-menu" role="menu">
        <li>
          <%= link_to godmin_translate("sign_out"), "/admin/sessions/destroy", method: :delete %>
        </li>
      </ul>
    </li>
  <% end %>
</ul>
